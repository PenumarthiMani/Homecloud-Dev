<aura:component controller="IncentivesFiltered" implements="force:lightningQuickActionWithoutHeader,force:hasRecordId" access="global" >
    <aura:handler name="init" action="{!c.getvalues}" value="{!this}"/>
    <aura:attribute name="innerclassvalues" type="Incentivesfiltered.innerclass[]"/>
    <aura:attribute name="recordId" type="ID" />
    <aura:attribute name="isOpen" type="boolean" default="false"/>
    <lightning:button class="btnWidth" variant="brand" label="Incentives" title="Incentive Options" onclick="{!c.openmodal}" />
    <aura:if isTrue="{!v.isOpen}">
        <!--###### MODAL BOX Start######--> 
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container">
                <!-- ###### MODAL BOX HEADER Start ######-->
                <header class="slds-modal__header">
                    <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Scenario Incentives</h2>
                </header>
                <div class="slds-modal__content slds-p-around_medium " id="modal-content-id-1">
                    <lightning:card>
                        <table class="slds-table slds-table_cell-buffer slds-table_bordered">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Type</th>
                                    <th>Name</th>
                                    <th>Amount</th>
                                    <th>Percentage</th>
                                </tr>
                            </thead>
                            <tbody>
                                <aura:iteration var="sa" items="{!v.innerclassvalues}">
                                    <tr>
                                        <td><ui:inputCheckbox value="{!sa.checklist}"/></td>
                                        <td><ui:outputText value="{!sa.Type}"/></td>
                                        <td><ui:outputText value="{!sa.IncetiveName}"/></td>
                                        <td><lightning:formattedNumber value="{!sa.AmountIncentive}" style="currency" currencyCode="USD"/></td> 
                                        <td><lightning:formattedNumber  value="{!sa.Percentage}" style="percent" maximumFractionDigits="4"/></td> 
                                        <!-- <td><lightning:formattedNumber value="{!sa.Amount}" style="currency" currencyCode="USD"/></td> -->
                                    </tr>
                                </aura:iteration>
                            </tbody>
                        </table>
                    </lightning:card>
                </div>
                <!--###### MODAL BOX FOOTER Part Start ######-->
                <footer class="slds-modal__footer">
                    <lightning:button variant="neutral" label="CANCEL" title="cancel"  onclick="{!c.cancel}"/>
                    <lightning:button variant="neutral" label="SAVE" title="save"  onclick="{!c.doSomething}"/>
                </footer>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
        <!--###### MODAL BOX Part END Here ######-->
    </aura:if>
</aura:component>